{% if searchTerm is defined and searchTerm is not empty %}
	<div class="container my-5 component">
		<h3>Résultats pour : "{{ searchTerm }}"</h3>
		{% if results is defined and results is not empty %}
			<ul>
				{% for result in results %}
					<li>
						<a href="https://boardgamegeek.com/boardgame/{{ result.id }}" target="_blank">
							{{ result.name }}
							({{ result.year }})
						</a>
					</li>
				{% endfor %}
			</ul>
		{% else %}
			<p>Aucun résultat trouvé.</p>
		{% endif %}
	</div>
{% endif %}

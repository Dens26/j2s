{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="form-container">
		<div class="mx-4 my-2">
			<h1 class="title">Connexion</h1>

			{% if error %}
				<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<form action="{{ path('app_login') }}" method="post">
				<label class="my-1" for="username">Adresse email</label>
				<input class="form-control mb-3" type="text" id="username" name="_username" value="{{ last_username }}" required>

				<label class="my-1" for="password">Mot de passe</label>
				<input
				class="form-control mb-3" type="password" id="password" name="_password" required>

				{# If you want to control the URL the user is redirected to on success
							        <input type="hidden" name="_target_path" value="/account"> #}

				<button class="btn w-100" type="submit">Connexion</button>
                <a class="mt-3 d-flex justify-content-end text-decoration-none text-high" href="{{path('app_register')}}">Pas encore de compte ?</a>
			</form>
		</div>
	</div>
{% endblock %}

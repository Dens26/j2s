								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Cat√©gories</span>
									<div class="category-list" style="display: none;">
										{% for subdomain in streamMatchFormated.subdomainsIndices %}
											<input type="hidden" name="subdomains[]" value="{{ subdomain }}">
											<div class="fs-5">{{ subdomain }}</div>
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endif %}
				{# Genres #}
				{% if streamMatch.mechanicsIndices is defined %}
					<div class="my-1">
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/mechanic.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">M√©canismes</span>
									<div class="category-list" style="display: none;">
										{% for mechanic in streamMatchFormated.mechanicsIndices %}
											<input type="hidden" name="mechanics[]" value="{{ mechanic }}">
											<div class="fs-5">{{ mechanic }}</div>
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endif %}
			</div>

			{# Deuxi√®me pack d'indices #}
			<div
				class="row row-cols-{{
					((streamMatch.age is defined and streamMatch.age|length > 0 ? 1 : 0) +
					(streamMatch.minPlayers is defined and streamMatch.minPlayers|length > 0 ? 1 : 0) +
					(streamMatch.playingTime is defined and streamMatch.playingTime|length > 0 ? 1 : 0) +
					(streamMatch.yearPublished is defined and streamMatch.yearPublished|length > 0 ? 1 : 0)) / 2
				}} row-cols-md-{{
					(streamMatch.age is defined and streamMatch.age|length > 0 ? 1 : 0) +
					(streamMatch.minPlayers is defined and streamMatch.minPlayers|length > 0 ? 1 : 0) +
				 	(streamMatch.playingTime is defined and streamMatch.playingTime|length > 0 ? 1 : 0) +

{% extends 'base.html.twig' %}

{% block title %}ADMIN--Confirmation!
{% endblock %}

{% block body %}
	<div class="admin-container m-4">
		<div class="m-2">
			<h1 class="admin-section-title mb-4 d-flex justify-content-center">Aperçu du jeu mystère</h1>

			<form action="">
				<div class="w-100 mb-5">
					<input class="form-control admin-searchbar-container text-center" type="text" value="{{ data.name }}" disabled>
				</div>

				{# Premier pack d'indices #}
				<div
					class="row row-cols-1 row-cols-md-3 mb-5 align-items-center">
					{# Catégories #}
					<div>
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/category.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Catégories</span>
									<div class="category-list" style="display: none;">
										{% for category in data.categorys %}
											<div>{{ category }}</div>
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
					{# Domaines #}
					<div>
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/subdomain.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Domaines</span>
									<div class="category-list" style="display: none;">
										{% for subdomain in data.subdomains %}
											<div>{{ subdomain }}</div>
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
					{# Genres #}
					<div>
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/mechanic.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Genres</span>
									<div class="category-list" style="display: none;">
										{% for mechanic in data.mechanics %}
											<div>{{ mechanic }}</div>
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				{# Deuxième pack d'indices #}
				<div
					class="row row-cols-2 row-cols-md-4 g-1 mb-5">
					{# Age #}
					<div>
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/age.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Age</span>
									<div class="category-list" style="display: none;">
										{{data.age}}
										ans
									</div>
								</div>
							</div>
						</div>
					</div>
					{# Joueurs #}
					<div>
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/players.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Joueurs</span>
									<div class="category-list" style="display: none;">
										{{data.players}}
										joueurs
									</div>
								</div>
							</div>
						</div>
					</div>
					
					{# Durée #}
					<div>
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/playingTime.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Durée</span>
									<div class="category-list" style="display: none;">
										{{data.playingTime}}
										minutes
									</div>
								</div>
							</div>
						</div>
					</div>
					{# Sortie #}
					<div>
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/date.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Sortie</span>
									<div class="category-list" style="display: none;">
										{{data.yearPublished}}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				{# Troisième pack d'indices #}
				<div
					class="row row-cols-1 row-cols-md-3 mb-5 align-items-center">
					{# Créateurs #}
					<div>
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/designer.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Créateurs</span>
									<div class="category-list" style="display: none;">
										{% for designer in data.designers %}
											<div>{{designer}}</div>
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
					{# Illustrateurs #}
					<div>
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/artist.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Illustrateurs</span>
									<div class="category-list" style="display: none;">
										{% for artist in data.artists %}
											<div>{{artist}}</div>
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
					{# Designers #}
					<div>
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/designer-graphique.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Designers</span>
									<div class="category-list" style="display: none;">
										{% for graphicDesigner in data.graphicDesigners %}
											<div>{{graphicDesigner}}</div>
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				{# Quatrième pack d'indices #}
				<div
					class="row row-cols-1 row-cols-md-2 mb-5 align-items-center">
					{# Récompense #}
					<div>
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/honor.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Récompenses</span>
									<div class="category-list" style="display: none;">
										{% for honor in data.honors %}
											<div>{{honor}}</div>
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
					{# Editeurs #}
					<div>
						<div class="category-container btn admin-btn admin-btn-container">
							<div class="d-flex align-items-center justify-content-center">
								<img class="me-2" width="32" height="32" src="{{asset('logo/publisher.png')}}" alt="">
								<div class="category-content">
									<span class="category-placeholder fs-4 fw-bold">Editeurs</span>
									<div class="category-list" style="display: none;">
										{% for publisher in data.publishers %}
											<div>{{publisher}}</div>
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="d-flex justify-content-center mt-4">
					<button class="btn btn-primary" type="submit">Confirmer</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
